                    label(for="ckout-date") Check Out
                    br
                    input#ckout-date(type="date")
                .form-group
                    label(for="ckout-date") Adults (13+)
                    br
                    select(name="number-adult")
                        option(value="1") 1
                        option(value="1") 1
                        option(value="1") 1
                        option(value="1") 1
                .form-group
                    label(for="ckout-date") Children (0-12)
                    br
                    select(name="number-child")
                        option(value="1") 1
                        option(value="1") 1
                        option(value="1") 1
                        option(value="1") 1
                .form-group
                    label(for="ckout-date") Promotion
                    br
                    input#ckout-date(type="text")
                .form-group
                    button Check Rates